# 🌍 הגדרות בסיסיות
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# 📁 נתיבי עבודה
WORKSPACE_DIR=./workspace
PROJECTS_ROOT=./projects
AGENTS_DIR=./agents

# 🤖 הגדרות ספקי AI
AI_PROVIDER=openai

OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3.7-sonnet

HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=mistralai/Mixtral-8x7B-Instruct-v0.1

# 🔒 מגבלות בטיחות לסקריפטים
FORBIDDEN_COMMANDS=rm -rf /,sudo,chmod 777

# 📊 הגדרות דאשבורד
DASHBOARD_URL=http://localhost:3000

# 🔁 סוכן Git Sync
GIT_USERNAME=your_github_username
GIT_EMAIL=your_github_email
GIT_TOKEN=your_github_token
GIT_REPOSITORY=your_github_repository

# הגדרות זיכרון סוכנים
# אפשרויות: json, sqlite (בעתיד)
MEMORY_MODE=json

# ----- API Keys -----
OPENAI_API_KEY=your_openai_api_key_here
CLAUDE_API_KEY=your_anthropic_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# ----- Server -----
PORT=5001
HOST=localhost

# ----- Git -----
GIT_USERNAME=your_github_username
GIT_EMAIL=your_github_email
GIT_TOKEN=your_github_token

# ----- Project -----
DEFAULT_PROJECT_PATH=./workspace/default-project

# ----- Logs -----
LOG_LEVEL=info

# ----- Memory -----
MEMORY_MODE=json

# ----- Agent Configuration -----
# Dev Agent
DEV_AGENT_MODE=debug
USE_SUB_AGENTS=true

# Git Sync Agent
GIT_SYNC_INTERVAL=30
AUTO_COMMIT=true

# Summary Agent
SUMMARY_INTERVAL=60

# QA Agent
QA_INTERVAL=120

# Scheduler Agent
SCHEDULER_AUTO_INIT=true
